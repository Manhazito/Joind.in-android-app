<?xml version="1.0" encoding="utf-8"?>
<!-- Detailed information about an event -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/LinearLayout01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="fill_parent"
            android:text=""
            android:textSize="20px"
            android:gravity="center_vertical|center_horizontal"
            android:layout_height="wrap_content"
            android:id="@+id/EventDetailsEventCaption"
            android:textStyle="bold"></TextView>
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text=""
            android:id="@+id/EventDetailsEventLoc"></TextView>
        <TableLayout
            android:id="@+id/TableLayout01"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:stretchColumns="0,1">
            <TableRow
                android:id="@+id/TableRow03"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:id="@+id/EventDetailsDate"></TextView>
                <TextView
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:id="@+id/EventDetailsStub"></TextView>
            </TableRow>
        </TableLayout>
    </LinearLayout>
    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:minHeight="80px"
        android:layout_height="80px"
        android:layout_weight="2" >
        <TextView
            android:text=""
            android:id="@+id/EventDetailsDescription"
            android:ellipsize="none"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:textSize="7pt"></TextView>
    </ScrollView>
    <TableLayout
        android:id="@+id/TableLayout02"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal">
        <TableRow
            android:id="@+id/TableRow01"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:baselineAligned="true"
            android:layout_width="wrap_content">
            <Button
                android:gravity="center_vertical|center_horizontal"
                android:id="@+id/ButtonEventDetailsViewTalks"
                android:layout_marginTop="2px"
                android:layout_height="wrap_content"
                android:textSize="5pt"
                android:layout_gravity="bottom"
                android:text="View all talks"
                android:layout_width="wrap_content"></Button>
            <Button
                android:id="@+id/ButtonEventDetailsViewComments"
                android:layout_marginTop="2px"
                android:layout_height="wrap_content"
                android:text="View comments"
                android:textSize="5pt"
                android:layout_gravity="bottom"
                android:layout_width="wrap_content"></Button>
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm attending"
                android:textSize="5pt"
                android:id="@+id/CheckBoxEventDetailsAttending"></CheckBox>
        </TableRow>
    </TableLayout>
</LinearLayout>
